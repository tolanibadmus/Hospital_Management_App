<div class="register-div">
  <h1>Update Staff</h1>
  <p>Ensure you are updating the right information for the staff in the fields below.</p>

  <div>
    <form action="/staff/<%= singleStaff._id %>/update" method="POST">
      <label for="firstNameInput">First Name</label>
      <input type="text" name="firstName"
      value="
        <% if (singleStaff) { %>
          <%= singleStaff.firstName%>
        <% } %>
      ">
  
      <label for="lastNameInput">last Name</label>
      <input type="text" name="lastName" 
      value="
        <% if (singleStaff) { %>
          <%= singleStaff.lastName%>
        <% } %>
      ">

      <label for="gender">Input Gender</label>
      <select name="gender" class="gender-dropdown">
        <% genders.forEach(gender => { %>
          <option value="<%= gender %>" <%= gender === singleStaff.gender ? 'selected' : '' %>>
            <%= gender %>
        </option>
        <% }) %>
      <select>

      <label for="email">Input Email Address</label>
      <input type="email" name="email"
      value="
        <% if (singleStaff) { %>
          <%= singleStaff.emailAddress%>
        <% } %>
      ">

      <label for="department">Select Department</label>
      <select name="department" class="dept-dropdown">
        <% departments.forEach(department => { %>
          <option value="<%= department %>" <%= department === singleStaff.department ? 'selected' : '' %>>
            <%= department %>
        </option>
        <% }) %>
      <select>

      <label for="qualification">Input Educational Qualification(s)</label>
      <input type="text" name="qualification"
      value="
        <% if (singleStaff) { %>
          <%= singleStaff.qualification%>
        <% } %> 
      ">
      <button type="submit" class="primary-button primary-button-submit">Update Staff</button>
    </form>
  </div>
</div>